<form method="post" action="/doctor" class="simple-form">
    <h1 class="form-header">Doctor Logging Panel</h1>
    <div class="form-group">
        <label for="id">Doctor ID:</label>
        <input type="number" class="form-control" value="1" id="id" name="id">
    </div>
    <div class="form-group">
        <label for="pwd">Password:</label>
        <input type="password" class="form-control" value="1" id="pwd" name="pwd">
    </div>
    <input type="submit" value="Login" style="color: black">
    <h5 style="color: red">{{error}}</h5>
</form>